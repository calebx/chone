source 'https://rubygems.org'

# core
gem 'rails', '4.1.1'
gem 'mysql2'
gem 'sass-rails', '~> 4.0.3'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0'

# js
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder', '~> 2.0'
gem 'sdoc', '~> 0.4.0', group: :doc

# view
gem 'bootstrap-sass'
gem 'compass-rails'
gem 'haml-rails'
gem 'simple_form'

# development
group :development do
  gem 'spring'
  gem 'better_errors'
  gem 'quiet_assets'
end

# service
gem 'nokogiri'
gem 'httparty'

# test
group :development, :test do
  gem 'factory_girl_rails'
  gem 'rspec-rails'
  gem 'database_cleaner'
end

group :production do
  gem 'puma'
end
